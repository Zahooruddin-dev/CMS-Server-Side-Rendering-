<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
    <div class="dashboard">
        <h1>Dashboard</h1>
        
        <% if (messages.success) { %>
            <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        
        <div class="dashboard-stats">
            <div class="stat-card">
                <h3>Recent Posts</h3>
                <p class="stat-number"><%= posts.length %></p>
            </div>
        </div>
        
        <div class="recent-posts">
            <h2>Recent Posts</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Status</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.title %></td>
                            <td><%= post.author %></td>
                            <td><span class="badge badge-<%= post.status %>"><%= post.status %></span></td>
                            <td><%= new Date(post.created_at).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>